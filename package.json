{
  "name": "ituspreadtrading-monorepo",
  "devDependencies": {
    "prettier": "2.8.8",
    "syncpack": "12.3.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.8.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clear": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm package-lock.json",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "syncpack:format": "syncpack format"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "axios": "^1.6.8",
    "jwt-decode": "^4.0.0",
    "recoil": "^0.7.7"
  }
}
