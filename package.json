{
  "name": "ituspreadtrading-monorepo",
  "devDependencies": {
    "prettier": "2.8.8",
    "syncpack": "12.3.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.8.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "syncpack:format": "syncpack format",
    "clear": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm package-lock.json"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
